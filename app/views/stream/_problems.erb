<ul class="nav nav-stacked nav-bordered">
  <% stream.problems.each do |problem|%>
  <li class="<%= 'active' if problem.slug==stream.slug %>">
    <a href="<%= exercise_url % [stream.track_id, problem.slug] %>">
      <%= problem.name %>
      <span class="total-count">
        <%= problem.total %>
      </span>
    </a>
    <% if problem.unread > 0 %>
    <span class="badge unread-count">
      <%= problem.unread %>
    </span>
    <% end %>
  </li>
  <% end %>
</ul>
