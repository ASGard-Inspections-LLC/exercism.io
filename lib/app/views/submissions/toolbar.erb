<div class="pull-right submission-toolbar hidden-xs">

  <div class="btn-group">
    <%= erb :"submissions/user_actions", locals: { submission: submission } %>

    <% if current_user.owns?(submission) %>
      <a
        href="https://twitter.com/intent/tweet?text=I just submitted the <%= submission.track_id %> <%= submission.slug %> exercise at @exercism_io - Leave me a nitpick at http://exercism.io/submissions/<%= submission.key %>"
        class="btn btn-default"
        data-toggle="tooltip"
        data-placement="bottom"
        title="Share with Twitter"
        target="_blank">
        <i class="fa fa-twitter"></i>
      </a>
    <% else %>
      <% if my_submission = their_submission_to(current_user, submission) %>
        <a
          href="/submissions/<%= my_submission.key %>"
          class="btn btn-default"
          data-toggle="tooltip"
          data-placement="bottom"
          title="My submission for this exercise"
          target="_blank">
          <i class="fa fa-rocket"></i>
        </a>
      <% end %>
    <% end %>

    <% if last_in_inbox %>
      <a
        href="#"
        class="btn btn-default next-submission disabled">
        Next Submission <i class="fa fa-arrow-right"></i>
      </a>
    <% else %>
      <a
        href="/exercises/next"
        class="btn btn-default next-submission">
        Next Submission <i class="fa fa-arrow-right"></i>
      </a>
    <% end %>
  </div>

  <span class="btn">
    <i class="fa fa-eye"></i>
    <%= view_count_for(submission) %>
  </span>
</div>
