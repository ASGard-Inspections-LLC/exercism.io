<div class="container">
  <section class="page-header">
    <h1><%= profile.username %></h1>
  </section>
  <div class="row">
    <div class="col-md-12">
      <p>
        GitHub Profile:
        <a target="_blank" href="https://github.com/<%= profile.username %>">
          <%= profile.username %>
        </a>
      </p>
      <% unless profile.narcissistic? %>
        <p>You will only be able to see <%= profile.username %>'s solutions to problems that you have completed yourself, indicated by stars <i class="fa fa-star"></i>. Otherwise, you'll find a Readme and test suite.</p>
      <% end %>
      <h3>Exercises</h3>
      <% if profile.has_current_exercises? %>
        <%= erb :"user/_exercises_table", locals: { profile: profile, exercises: profile.exercises } %>
      <% else %>
        <p>No current exercises.</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4>Archived</h4>
      <% if profile.has_archived_exercises? %>
        <%= erb :"user/_archived_exercises_table", locals: { profile: profile } %>
      <% else %>
        <p>No archived exercises.</p>
      <% end %>
    </div>
  </div>
</div>
